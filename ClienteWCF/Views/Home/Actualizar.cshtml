@model ClienteWCF.ServiceReferenceUsuarios.BE

@{
    ViewBag.Title = "Edit";
}

<h2>Actualizar Usuario</h2>
@if (TempData["resu"] != null)
{
    <h5 class="alert alert-success">@TempData["resu"]</h5>
}
@if (TempData["error"] != null)
{
    <h5 class="alert alert-danger">@TempData["error"]</h5>
}
<form action="/" method="post">
    <div class="form-group">
        <label for="email">Id usuario:</label>
        <input type="text" name="u_idu" value="" placeholder="Id Usuario" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">Nombre:</label>
        <input type="text" name="u_nombre" value="" placeholder="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">Paterno:</label>
        <input type="text" name="u_paterno" value="" placeholder="Paterno" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">Materno :</label>
        <input type="text" name="u_materno" value="" placeholder="Materno" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">Edad:</label>
        <input type="number" name="u_edad" value="" placeholder="Edad" class="form-control" />
    </div>

    <br />
    <input type="submit" name="name" value="Actualizar" formaction="/Home/ActualizarUsuario" class="btn btn-success" />
    <a href="/Home/Obtener" class="btn btn-danger">Cancelar</a>

</form>
